<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true"><shape>
            <solid android:color="#0BE2F1" />
            <stroke android:width="1dp" android:color="#84ECF3" />
            <corners android:radius="10dp" />
            <padding android:bottom="5dp"  android:top="5dp" />
        </shape></item>
    <item><shape>
            <gradient android:angle="270" android:centerColor="#CEF2F5" android:endColor="#0BE2F1" android:startColor="#84ECF3" />
            <stroke android:width="1dp" android:color="#84ECF3" />
            <corners android:radius="8dp" />
            <padding android:bottom="5dp"  android:top="5dp" />
        </shape></item>
</selector>